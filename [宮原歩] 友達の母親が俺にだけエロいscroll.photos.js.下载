window.imgscroll = {
	options: {
		target: null, //插入圖片的目標位置
		img_list: null, //圖片數組 [{ url: "/CMF01_000.jpg"},{ url: "/CMF01_001.jpg"}]
		img_max: 0, //圖片數量
		img_num: 0, //圖片累計已加載的數量
		step_max: 50, //每輪加載圖片的數量 從0開始計數
		step_num: 0, //每輪已加載圖片的數量
		batch_size: 5, //每次並發加載的圖片數量
		loading_batch: false, //是否正在加載一批圖片
		last_trigger_scroll: 0, //上次觸發新輪次時的滾動位置
		s_scroll: 0, //滑動條的Y軸位置
		w_height: 0, //頁面內容的高度
		l_height: 300, //小於此參數則開始加載圖片
		w_width: 640 //瀏覽器窗口寬度
	},
	
	// 批量加載圖片
	onLoad: function(){
		if(this.options.img_num >= this.options.img_max){
			$("#img_load").hide(); //隱藏loading圖標
			$("#control_block").show();
			return;
		}
		
		if(this.options.loading_batch) {
			return; // 如果正在加載，則不重復加載
		}
		
		// 檢查當前輪次是否已達到上限
		if(this.options.step_num >= this.options.step_max) {
			return; // 當前輪次已加載夠了，等待滾動觸發下一輪
		}
		
		this.options.loading_batch = true;
		
		// 計算本次要加載的圖片數量
		var remaining_in_step = this.options.step_max - this.options.step_num; // 本輪剩余可加載數量
		var batch_size = Math.min(this.options.batch_size, remaining_in_step); // 實際批次大小
		var batch_end = Math.min(
			this.options.img_num + batch_size,
			this.options.img_max
		);
		
		var load_promises = [];
		var batch_start = this.options.img_num;
		
		// 並發加載多張圖片
		for(var i = batch_start; i < batch_end; i++) {
			load_promises.push(this.loadSingleImage(i));
		}
		
		// 等待所有圖片加載完成
		Promise.all(load_promises).then(function(results) {
			// 按順序插入圖片（保持原有的順序）
			results.forEach(function(result) {
				imgscroll.insertImage(result.index, result.width);
			});
			
			// 更新計數器
			var loaded_count = batch_end - batch_start;
			imgscroll.options.img_num = batch_end;
			imgscroll.options.step_num += loaded_count;
			imgscroll.options.loading_batch = false;
			
			// 如果本輪還可以繼續加載且滿足條件，繼續加載下一批
			if(imgscroll.options.step_num < imgscroll.options.step_max && 
			   imgscroll.options.img_num < imgscroll.options.img_max) {
				var currentScroll = $(window).scrollTop();
				var currentHeight = $("body").height();
				if((currentHeight - currentScroll) < imgscroll.options.l_height) {
					setTimeout(function() {
						imgscroll.onLoad();
					}, 100); // 延遲100ms避免頻繁調用
				}
			}
		}).catch(function(error) {
			console.error('批量加載圖片失敗:', error);
			imgscroll.options.loading_batch = false;
		});
	},
	
	// 加載單張圖片
	loadSingleImage: function(index) {
		return new Promise(function(resolve, reject) {
			var img = new Image();
			img.onload = function() {
				resolve({
					index: index,
					width: this.width,
					url: imgscroll.options.img_list[index].url
				});
			};
			img.onerror = function() {
				reject(new Error('圖片加載失敗: ' + imgscroll.options.img_list[index].url));
			};
			img.src = imgscroll.options.img_list[index].url;
		});
	},
	
	// 插入圖片到頁面
	insertImage: function(index, width) {
		width = this.options.w_width > width ? width + "px" : "99%";
		var img_html = '<div style="text-align:center;color:#999;padding-bottom:10px;font-size:13px;">' +
			'<img src="' + this.options.img_list[index].url + '" width="' + width + '">' +
			'<br /><span>' + (index + 1) + '/' + this.options.img_max + '</span></div>';
		this.options.target.append(img_html);
	},
	
	// 原有的endLoad方法保留，但不再使用
	endLoad: function(width){
		width = this.options.w_width > width? width+"px": "99%";
		this.options.target.append('<div style="text-align:center;color:#999;padding-bottom:10px;font-size:13px;"><img src="'+this.options.img_list[this.options.img_num].url+'" width="'+width+'"><br /><span>'+ (this.options.img_num+1) +'/'+ this.options.img_max +'</span></div>');
		this.options.img_num += 1;
		if(this.options.step_num < this.options.step_max){
			this.options.step_num += 1;
			this.onLoad();
		}else{
			//結束一輪加載後將每輪已加載圖片數量歸零
			this.options.step_num = 0;
		}
	},
	
	//target:目標元素 imglist:圖片數組 benum:圖片開始加載的位置
	beLoad: function(target,img_list,benum){
		this.options.target = target;
		this.options.img_list = img_list;
		this.options.img_max = img_list.length;
		this.options.img_num = benum;
		this.options.l_height = $(window).height()*2;
		this.options.w_width = $("body").width();
		//綁定滑動條的判定
		$(window).scroll(function(){
			if(window.citeDis) return;
			imgscroll.options.s_scroll = $(window).scrollTop();
			imgscroll.options.w_height = $(document).height();
			var window_height = $(window).height();
			
			// 計算滾動百分比
			var scroll_percent = (imgscroll.options.s_scroll + window_height) / imgscroll.options.w_height;
			
			// 只有滾動到頁面90%以上才觸發加載
			if(scroll_percent > 0.9){
				// 如果沒有正在加載且還有圖片未加載
				if(!imgscroll.options.loading_batch && imgscroll.options.img_num < imgscroll.options.img_max) {
					// 如果當前輪次未滿，繼續加載
					if(imgscroll.options.step_num < imgscroll.options.step_max) {
						imgscroll.onLoad();
					}
					// 如果當前輪次已滿，需要用戶向下滾動足夠距離才開始新一輪
					else if(imgscroll.options.s_scroll > imgscroll.options.last_trigger_scroll + 2000) {
						imgscroll.options.step_num = 0;
						imgscroll.options.last_trigger_scroll = imgscroll.options.s_scroll;
						imgscroll.onLoad();
					}
				}
			}
		});
		this.onLoad();
	}
};

//是否允許縮放
function changeMeta(isScl){
	var meta = document.getElementsByTagName('meta');
	if(isScl){
		meta[0].setAttribute('content',"width=device-width, initial-scale=1.0, maximum-scale=3.0, user-scalable=3.0;");
	}else{
		meta[0].setAttribute('content',"width=device-width, initial-scale=1.0, user-scalable=no");
	}
}

//顯示互動觀點
function citeShow(isShow){
	if(isShow){
		$('#cite_vote').css('display','');
		$('body').css('background','#fafafa');
		$("#toolbar_bottom").hide();
		changeMeta(0);
		window.citeDis = 1;

		window.imgListTop = $(window).scrollTop();
		$('#img_list').css('display','none');
		$('#img_load').css('display','none');
	}else{
		$('#img_list').css('display','');
		$('body').css('background','#444');
		$("#toolbar_bottom").show();
		$(window).scrollTop(window.imgListTop);

		$('#cite_vote').css('display','none');
		changeMeta(1);
		setTimeout("window.citeDis = 0;", 500);

		if($('#control_block').css('display') == 'none') $('#img_load').css('display','');
	}
}

//分享按鈕
function toShare(){
	$("#mask_panel").fadeIn("slow").click(function(){
		$("#pop_grade").slideUp("fast",function(){
			$("#mask_panel").fadeOut("slow");
		});
	});
	$("#pop_grade").slideDown("fast");
}

window.autoScroll = {
	wsTop: 0,
	wStep: 0,
	wNum: 0,
	wPx: 5,
	wUp: 0,
	setTime: null,
	autoSrl: function(){
		if(autoScroll.wUp < 1){
			$(window).scrollTop(autoScroll.wsTop + autoScroll.wPx*autoScroll.wStep);
		}else{
			$(window).scrollTop(autoScroll.wsTop - autoScroll.wPx*autoScroll.wStep);
		}
		if(autoScroll.wStep < autoScroll.wNum){
			autoScroll.wStep += 1;
			autoScroll.setTime = setTimeout(autoScroll.autoSrl,5);
		}else{
			autoScroll.wStep = 0;
			autoScroll.setTime = null;
		}
	},
	beAuto: function(up){
		if(autoScroll.setTime == null){
			if(up < 1){
				autoScroll.wUp = 0;
			}else{
				autoScroll.wUp = 1;
			}
			this.autoSrl();
		}
	}
}

$(function(){
	var musY,winH,toolBar,toolBar_b,jump_str='',jump_num = imglist.length;
	
	for(i=1;i<=jump_num;i++){
		jump_str += '<option value="'+ i +'">第'+ i +'頁</option>';
	}
	$('#jump_select').append(jump_str);
	$('#jump_select').change(function(){
		if ($(this).val() != ''){
			var t = Math.round(Math.random()*100000000);
			var new_url = 'http://' + window.location.host + window.location.pathname + '?t=' + t + '#' + $(this).val();
			window.open(new_url,'_self');
		}
	});

	var shareBox={};
	shareBox.obj=document.getElementById('shareBox');
	shareBox.link=shareBox.obj.getElementsByTagName('a');
	shareBox.title=document.title;
	shareBox.url=location.href;
	for (var i=0;i<shareBox.link.length;i++){
		var tempHref=shareBox.link[i].getAttribute('href');
		tempHref = tempHref.replace(/topic/g,encodeURIComponent(shareBox.title));
		tempHref = tempHref.replace(/share_url/,encodeURIComponent(shareBox.url));
		shareBox.link[i].setAttribute('href',tempHref);
	}

	$("body").click(function(event){
		toolBar = $("#toolbar");
		toolBar_b = $("#toolbar_bottom");
		musY = event.clientY;
		winH = $(window).height();

		if(toolBar.attr("display") == 1){
			if(musY > 40 && musY < (winH - 40)){
				toolBar.attr("display",0).fadeOut();
				toolBar_b.fadeOut();
			}
		}else{
			if(window.citeDis) return false;

			if(musY < (winH*0.4)){
				autoScroll.wNum = winH/autoScroll.wPx;
				autoScroll.wsTop = $(window).scrollTop();
				if(autoScroll.wsTop > 0) autoScroll.beAuto(1);
			}else if(musY > (winH*0.8)){
				autoScroll.wNum = winH/autoScroll.wPx;
				autoScroll.wsTop = $(window).scrollTop();
				autoScroll.beAuto(0);
			}else{
				toolBar.attr("display",1).fadeIn();
				toolBar_b.fadeIn();
			}
		}
	});
});